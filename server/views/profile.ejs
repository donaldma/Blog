<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= user.name %></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <script src="/styles/js/edit.js"></script>
    <link rel="stylesheet" type="text/css" href="/styles/build/main.css">
  </head>
  <body>
    <% include partials/_nav.ejs %>
    <div class="container profile-container">
      <div class="col-md-6 col-md-offset-3">
        <button class="btn btn-primary edit-btn">Update Profile</button>
        <button class="btn btn-primary back-btn">Back to Profile</button> 
        <div class="profile">
          <br />                
          <img class="profile-img" src="<%=user.avatar_url %>" />
          <h3><%= user.name %></h3>
          <h3><%= user.email %></h3>
          <h3>About Me</h3>
          <p><%= user.about %></p>
        </div>
        <div class="edit-profile">
          <form method="POST" action="/profile/edit/<%= user.id %>" class="edit-form" onsubmit="return FinalPasswordCheck()">
            <div class="form-group">
              <label for="name">Name: </label>
              <input class="form-control" type="text" id="name" name="name" value="<%= user.name %>">
            </div>
            <div class="form-group">
              <label for="email">Email: </label>
              <input class="form-control" type="email" id="email" name="email" value="<%= user.email %>">
            </div>
            <div class="form-group">
              <label for="pfp">Profile Picture URL: </label>
              <input class="form-control" type="text" id="pfp" name="avatar_url" value="<%= user.avatar_url %>">
            </div>
            <div class="form-group" id="pass1form">
              <label for="pass1">New Password: </label>
              <input class="form-control" type="password" id="pass1" name="password" placeholder="New Password">
            </div>
            <div class="form-group" id="pass2form">
              <label for="pass2">Confirm New Password: </label>
              <input class="form-control" type="password" id="pass2" onblur="return passwordCheck()" placeholder="Confirm New Password">
            </div>
            <div class="form-group">
              <label for="about-me">About me: </label>
              <textarea class="form-control" type="text" id="about-me" name="about"><%= user.about %></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Update</button>
          </form>
        </div>
      </div>
    </div>
    <script>
      function passwordCheck() {
        var pass1 = document.getElementById('pass1').value;
        var pass2 = document.getElementById('pass2').value;
        var ok = true;
        if (pass1 !== pass2) {
          document.getElementById("pass1").style.borderColor = "#a94442";
          document.getElementById("pass2").style.borderColor = "#a94442";
          ok = false;
        } else {
          document.getElementById("pass1").style.borderColor = "#ccc";
          document.getElementById("pass2").style.borderColor = "#ccc";
        }
        return ok;
      }
      function FinalPasswordCheck() {
        var pass1 = document.getElementById('pass1').value;
        var pass2 = document.getElementById('pass2').value;
        var ok = true;
        if (pass1 !== pass2) {
          alert('Passwords do not match');
          ok = false;
        } else {
          document.getElementById("pass1").style.borderColor = "#ccc";
          document.getElementById("pass2").style.borderColor = "#ccc";
        }
        return ok;
      }
    </script>
  </body>
</html>